#include<stdio.h>
#define bye return 0
int main() {
   int i, j;
   int b = 0;
   int l = 6;
   char c = 'A';
   int t;
   int Array[7] = { 0, 1, 3, 5, 7, 9, 11 };
   int k = 0;
   for (i = l; i >= 0; i--) {
      printf("\n");
      c = 'A';
      for (j = i; j >= 0; j--) {
         printf("%c", c++);
      }
    b = Array[k++];
      for (j = 0; j < b; j++) {
         printf(" ");
      }

      c = 'F' - (b / 2);

      if (b == 0) {
         t = i - 1;
      } else {
         t = i;
      }

      for (j = 0; j <= t; j++) {
         printf("%c", c--);
      }
   }
   bye;
}
